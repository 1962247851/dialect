<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_recycler_view_dynamic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:id="@+id/linearLayout_recycler_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:adjustViewBounds="true"
                android:id="@+id/roundedImageView_recycler_dynamic_user_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/userhead0"
                app:riv_border_color="@color/XFrame_darker_gray"
                app:riv_border_width="0.5dp"
                app:riv_corner_radius="30dp"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                app:riv_tile_mode="repeat" />

            <LinearLayout
                android:id="@+id/linearLayout_recycler_discuss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_recycler_dynamic_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textColor="@color/colorBlackText"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_recycler_dynamic_user_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:maxLines="2"
                    android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_recycler_dynamic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:background="@color/colorWhite"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <ImageButton
                android:background="@drawable/ic_comment_gray"
                android:id="@+id/imageButton_recycler_dynamic_comment"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:tooltipText="评论" />

            <TextView
                android:layout_marginEnd="10dp"
                android:id="@+id/textView_recycler_dynamic_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/colorGrayText" />

            <ImageButton
                android:background="@drawable/ic_good_gray"
                android:id="@+id/imageButton_recycler_dynamic_good"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:tooltipText="点赞" />

            <com.robinhood.ticker.TickerView
                android:layout_marginEnd="10dp"
                android:id="@+id/tickerView_recycler_dynamic_good_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/colorGrayText" />

            <ImageButton
                android:background="@drawable/ic_share_gray"
                android:id="@+id/imageButton_recycler_dynamic_share"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:tooltipText="分享" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

