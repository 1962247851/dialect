<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:fitsSystemWindows="true"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_main_user_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tooltipText="我" />


                <com.flyco.tablayout.SlidingTabLayout
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tabLayout_main"
                    android:layout_alignTop="@id/button_main_user_head"
                    android:layout_alignBottom="@id/button_main_user_head"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:tl_indicator_width_equal_title="true"
                    app:tl_textBold="SELECT"
                    app:tl_textsize="20sp" />

                <Button
                    android:id="@+id/button_main_search"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:tooltipText="搜索" />
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appBarLayout_main"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>