<?xml version="1.0" encoding="utf-8"?>
<me.sugarkawhi.bottomnavigationbar.BottomNavigationBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/linearLayout_bnb_item_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bnb_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp" />

            <TextView
                android:id="@+id/bnb_item_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/bnb_item_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-5dp"
            android:layout_toEndOf="@id/linearLayout_bnb_item_badge"
            android:background="@drawable/bg_circle"
            android:gravity="center"
            android:textColor="@color/XFrame_white" />
    </RelativeLayout>

</me.sugarkawhi.bottomnavigationbar.BottomNavigationBar>