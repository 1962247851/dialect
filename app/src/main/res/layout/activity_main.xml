<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigationBar_main" />

    <me.sugarkawhi.bottomnavigationbar.BottomNavigationBar
        android:id="@+id/navigationBar_main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        app:bnb_anim="true"
        app:bnb_layoutId="@layout/bnb_item_badge"
        app:bnb_scale_ratio="1.3"
        app:bnb_selectedColor="@color/XFrame_white"
        app:bnb_unSelectedColor="@color/XFrame_white" />

</RelativeLayout>